<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="165dp"
    android:layout_height="245dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:elevation="4dp"
    card_view:cardCornerRadius="2dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_customer_feedback"
            android:layout_width="100dp"
            android:layout_height="143dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="1dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="12sp"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:text="Every\nproducts is\n\very\naffordable\nand stylish" />

        <TextView
            android:id="@+id/tv_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="10sp"
            android:textStyle="bold"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/tv_customer_feedback"
            tools:text="RAVIKANT" />

        <ImageView
            android:id="@+id/mail_read"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/mail"
            card_view:layout_constraintTop_toBottomOf="@id/tv_customer_name"
            android:layout_marginTop="10dp"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>