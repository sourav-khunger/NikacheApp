<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f2f2f2"
    tools:context="com.doozycod.nikache.Fragment.OrdersFragment">

    <ImageView
        android:id="@+id/iv_order_bg"
        android:layout_width="100dp"
        android:layout_height="97dp"
        android:src="@drawable/ic_event_available_grey_100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
        android:id="@+id/tv_no_item_in_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="there is no order history"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:textColor="#95989a"
        app:layout_constraintTop_toBottomOf="@id/iv_order_bg"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        />

    <Button
        android:id="@+id/iv_order_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTINUE SHOPPING"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/tv_no_item_in_order"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        />

</android.support.constraint.ConstraintLayout>
