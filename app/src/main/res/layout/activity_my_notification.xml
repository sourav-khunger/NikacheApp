<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f2f2f2"
    tools:context=".MyNotification">

    <ImageView
        android:id="@+id/iv_notification_bg"
        android:layout_width="100dp"
        android:layout_height="97dp"
        android:src="@drawable/ic_notifications_none_grey_100_97dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
        android:id="@+id/tv_no_item_in_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="there is no notification"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:textColor="#95989a"
        app:layout_constraintTop_toBottomOf="@id/iv_notification_bg"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        />


</android.support.constraint.ConstraintLayout>