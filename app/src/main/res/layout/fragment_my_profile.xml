<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view_my_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="?actionBarSize"
    tools:context="com.doozycod.nikache.Fragment.MyAccountFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/inner_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4">

        <android.support.v7.widget.CardView

            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            card_view:cardCornerRadius="2dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="First Name*"
                    android:textColor="#818180"
                    android:text="First Name*"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="20dp"/>


                <EditText
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="15dp"
                    android:hint="First Name"
                    android:textColorHint="#dadfe2"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_first_name"
                    />

                <TextView
                    android:id="@+id/tv_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Last Name*"
                    android:textColor="#818180"
                    android:text="Last Name*"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@+id/et_first_name"
                    android:layout_marginTop="30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="20dp"/>

                <EditText
                    android:id="@+id/et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="15dp"
                    android:hint="Last Name"
                    android:textColorHint="#dadfe2"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_last_name"
                    />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Email*"
                    android:textColor="#818180"
                    android:text="Email*"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@+id/et_last_name"
                    android:layout_marginTop="30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="20dp"/>

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="15dp"
                    android:hint="Email"
                    android:textColorHint="#dadfe2"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_email"
                    />

                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Mobile*"
                    android:textColor="#818180"
                    android:text="Mobile*"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@+id/et_email"
                    android:layout_marginTop="30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="20dp"/>

                <EditText
                    android:id="@+id/et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="15dp"
                    android:hint="Mobile No."
                    android:textColorHint="#dadfe2"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mobile"
                    />

                    <RadioGroup
                        android:id="@+id/radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/et_mobile"
                        android:layout_marginTop="30dp">

                        <RadioButton
                            android:id="@+id/rb_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="male"
                            android:text="male"
                            android:textColor="#818180"
                            android:textAllCaps="true"
                            android:layout_marginLeft="25dp"/>

                        <RadioButton
                            android:id="@+id/rb_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="female"
                            android:text="female"
                            android:textColor="#818180"
                            android:textAllCaps="true"
                            android:layout_marginLeft="25dp"/>

                    </RadioGroup>

                <!--<EditText-->
                    <!--android:id="@+id/et_date_of_birth"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:inputType="date"-->
                    <!--app:layout_constraintLeft_toLeftOf="parent"-->
                    <!--android:layout_marginLeft="15dp"-->
                    <!--app:layout_constraintRight_toRightOf="parent"-->
                    <!--android:layout_marginRight="15dp"-->
                    <!--android:hint="Date of Birth"-->
                    <!--android:textColorHint="#dadfe2"-->
                    <!--android:layout_marginTop="30dp"-->
                    <!--app:layout_constraintTop_toBottomOf="@+id/radio_group"-->
                    <!--/>-->

                <Button
                    android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UPDATE"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@id/radio_group"
                    android:layout_marginTop="30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="60dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="60dp"
                    />

                <View
                    android:id="@+id/divider_line_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@id/button1" />
                >
            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView

            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            card_view:cardCornerRadius="2dp"
            app:layout_constraintTop_toBottomOf="@+id/card_view"
            android:layout_marginTop="10dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/divider_line_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />


                <TextView
                    android:id="@+id/tv_reset_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="reset password"
                    android:textColor="#818180"
                    android:text="reset password"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/divider_line_2"
                    android:layout_marginTop="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="20dp"/>

                <EditText
                    android:id="@+id/et_old_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="15dp"
                    android:hint="Old Password*"
                    android:textColorHint="#dadfe2"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_reset_password"
                    />


                <EditText
                    android:id="@+id/et_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="15dp"
                    android:hint="New Password*"
                    android:textColorHint="#dadfe2"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/et_old_password"
                    />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UPDATE"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@id/et_new_password"
                    android:layout_marginTop="30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="60dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="60dp"
                    />

                <View
                    android:id="@+id/divider_line_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@id/button2" />
                >
            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card_view2"
            android:layout_marginTop="65dp"/>



    </android.support.constraint.ConstraintLayout>

</ScrollView>








