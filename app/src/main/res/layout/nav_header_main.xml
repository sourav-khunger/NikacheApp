<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_header"
    android:layout_width="280dp"
    android:layout_height="139dp"
    android:background="#f4f4f4"
    >






    <FrameLayout
        android:id="@+id/user_first_letter_on_circle_nav_header"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="25dp">

        <TextView
            android:id="@+id/tv_solid_circle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle2"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tvAlphabetPlaceHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="S"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_gravity="center_horizontal|center_vertical"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="@dimen/profile_width"
            android:layout_height="@dimen/profile_height"
            app:srcCompat="@drawable/ic_account_circle_green_50dp"
            tools:ignore="VectorDrawableCompat"
            />


    </FrameLayout>




    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/user_first_letter_on_circle_nav_header"
        android:textColor="#1872cc"
        android:textSize="14dp"
        tools:text="Welcome !" />

    <FrameLayout
        android:id="@+id/fl_user_logged_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/user_first_letter_on_circle_nav_header">

    <TextView
        android:id="@+id/tv_user_name_nav_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        tools:text="tsunil28k@gmail.com"
        android:visibility="gone"/>



    <TextView
        android:id="@+id/tv_loginin_nav_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="3dp"

        />

    <View
        android:id="@+id/v_after_loginIn_in_nav_header"
        android:layout_width="2dp"
        android:layout_height="12dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="6dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tv_signup_nav_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="59dp"
       />

</FrameLayout>

    <ImageView
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#dadfe2"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/user_first_letter_on_circle_nav_header"
        />

    <ImageView
        android:id="@+id/iv_fav_borderd_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favorite_border_green_24dp"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        android:layout_marginTop="@dimen/standard_10"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/tv_my_wishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="my wishlist"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        android:layout_marginTop="13dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_fav_borderd_but"
        android:layout_marginLeft="7dp"/>

    <ImageView
        android:id="@+id/divider2"
        android:layout_width="2dp"
        android:layout_height="46dp"
        android:background="#dadfe2"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/user_first_letter_on_circle_nav_header"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="140dp"
        />

    <ImageView
        android:id="@+id/iv_my_orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_event_available_green_24dp"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        android:layout_marginTop="11dp"
        app:layout_constraintLeft_toRightOf="@id/divider2"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/tv_my_orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="my orders"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp"

        app:layout_constraintTop_toBottomOf="@+id/divider1"
        android:layout_marginTop="13dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_my_orders"
        android:layout_marginLeft="9dp"/>



