<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_sub_total_pay_amt_detail"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="SUB TOTAL"
        android:textColor="#595c63"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="SUB TOTAL" />

    <TextView
        android:id="@+id/tv_first_colon_pay_amt_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="5dp"
        android:text=":"
        android:textColor="#595c63"
        app:layout_constraintLeft_toRightOf="@+id/tv_sub_total_pay_amt_detail"
        app:layout_constraintRight_toLeftOf="@id/tv_sub_total_price_pay_amt_detail"
        app:layout_constraintTop_toTopOf="parent"
        tools:text=":" />

    <TextView
        android:id="@+id/tv_sub_total_price_pay_amt_detail"
        android:layout_width="@dimen/standard_100"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:textColor="#595c63"
        android:text="Rs. 1699"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Rs. 1699" />

    <TextView
        android:id="@+id/tv_shipping_charges_pay_amt_detail"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="SHIPPING CHARGES"
        android:textColor="#595c63"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub_total_price_pay_amt_detail"
        tools:text="SHIPPING CHARGES" />

    <TextView
        android:id="@+id/tv_second_colon_pay_amt_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="10dp"
        android:text=":"
        android:textColor="#595c63"
        app:layout_constraintLeft_toRightOf="@+id/tv_shipping_charges_pay_amt_detail"
        app:layout_constraintRight_toLeftOf="@+id/tv_free_in_pay_amt_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_first_colon_pay_amt_detail"
        tools:text=":" />

    <TextView
        android:id="@+id/tv_free_in_pay_amt_detail"
        android:layout_width="@dimen/standard_100"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="FREE"
        android:gravity="right"
        android:textColor="#468311"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub_total_price_pay_amt_detail"
        tools:text="FREE" />

    <TextView
        android:id="@+id/tv_pay_amt_pay_amt_detail"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="PAY AMOUNT"
        android:textStyle="bold"
        android:textColor="#595c63"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_shipping_charges_pay_amt_detail"
        tools:text="PAY AMOUNT"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/tv_third_colon_pay_amt_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="10dp"
        android:text=":"
        android:textColor="#595c63"
        app:layout_constraintLeft_toRightOf="@+id/tv_pay_amt_pay_amt_detail"
        app:layout_constraintRight_toLeftOf="@+id/tv_pay_amt_val_pay_amt_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_second_colon_pay_amt_detail"
        tools:text=":"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/tv_pay_amt_val_pay_amt_detail"
        android:layout_width="@dimen/standard_100"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="Rs. 1699"
        android:gravity="right"
        android:textColor="#595c63"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_free_in_pay_amt_detail"
        tools:text="Rs. 1699"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>