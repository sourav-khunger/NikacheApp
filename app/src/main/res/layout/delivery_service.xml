<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff1f2"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_shipped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_airport_shuttle_green_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/tv_free_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        tools:text="free\ndelivery"
        android:layout_marginLeft="14dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_shipped"/>

    <View
        android:id="@+id/v_first_line_delivery"
        android:layout_width="2dp"
        android:layout_height="23dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_free_delivery"
        android:background="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/iv_return_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_autorenew_green_24dp"
        app:layout_constraintLeft_toRightOf="@+id/v_first_line_delivery"
        android:layout_marginLeft="18dp"/>

    <TextView
        android:id="@+id/tv_easy_returns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        tools:text="easy\nreturns"
        android:layout_marginLeft="14dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_return_box"/>

    <View
        android:id="@+id/v_second_line_delivery"
        android:layout_width="2dp"
        android:layout_height="23dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_easy_returns"
        android:background="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/iv_home_delivery_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_payment_green_24dp"
        app:layout_constraintLeft_toRightOf="@+id/v_second_line_delivery"
        android:layout_marginLeft="19dp"/>

    <TextView
        android:id="@+id/tv_cash_on_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        tools:text="cash on\ndelivery"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_home_delivery_service"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>