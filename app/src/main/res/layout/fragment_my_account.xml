<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="?actionBarSize"
    tools:context="com.doozycod.nikache.Fragment.MyAccountFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/inner_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4"
        >

        <android.support.v7.widget.CardView

            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            card_view:cardCornerRadius="2dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_acc_circle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/ic_account_circle_green_50dp"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"
                    tools:ignore="VectorDrawableCompat" />


                <FrameLayout
                    android:id="@+id/user_first_letter_on_circle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/tv_solid_circle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle2"
                     />

                    <TextView
                        android:id="@+id/tvAlphabetPlaceHolder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="S"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:layout_gravity="center_horizontal|center_vertical"/>


                </FrameLayout>


                <TextView
                    android:id="@+id/tv_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:text="SUNIL8269"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    card_view:layout_constraintLeft_toRightOf="@+id/user_first_letter_on_circle"
                    card_view:layout_constraintTop_toTopOf="parent"
                    tools:text="SUNIL8269" />
                <!--25-->

                <FrameLayout
                    android:id="@+id/fl_login_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_user_email_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="45dp"
                    android:text="tsunil28k@gmail.com"
                    android:textColor="@android:color/holo_blue_dark"
                    tools:text="tsunil28k@gmail.com"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tv_loginin_my_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log In"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="90dp"
                    />

                <View
                    android:id="@+id/v_after_loginIn_in_my_acc"
                    android:layout_width="2dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="48dp"
                    android:background="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/tv_signup_my_acc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="148dp"
                    />

                </FrameLayout>

                <ImageView
                    android:id="@+id/iv_setting_my_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_settings_green_24dp"
                    card_view:layout_constraintRight_toRightOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/divider_line_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="#dadfe2"
                    card_view:layout_constraintTop_toBottomOf="@+id/user_first_letter_on_circle" />

                <ImageView
                    android:id="@+id/iv_wishlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_favorite_border_green_24dp"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/divider_line_1" />

                <TextView
                    android:id="@+id/tv_wishlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:text="my wishlist"
                    android:textAllCaps="true"
                    android:textColor="#595c63"
                    android:textSize="12sp"
                    card_view:layout_constraintLeft_toRightOf="@+id/iv_wishlist"
                    card_view:layout_constraintTop_toBottomOf="@+id/divider_line_1"
                    tools:text="my wishlist" />

                <View
                    android:id="@+id/divider_line_2"
                    android:layout_width="314dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="20dp"
                    android:background="#dadfe2"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/tv_wishlist" />

                <ImageView
                    android:id="@+id/iv_my_orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_event_available_green_24dp"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/divider_line_2" />

                <TextView
                    android:id="@+id/tv_my_orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:text="my orders"
                    android:textAllCaps="true"
                    android:textColor="#595c63"
                    android:textSize="12sp"
                    card_view:layout_constraintLeft_toRightOf="@+id/iv_my_orders"
                    card_view:layout_constraintTop_toBottomOf="@+id/divider_line_2"
                    tools:text="my orders" />

                <View
                    android:id="@+id/divider_line_3"
                    android:layout_width="314dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="20dp"
                    android:background="#dadfe2"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/tv_my_orders" />

                <ImageView
                    android:id="@+id/iv_my_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_account_balance_wallet_black_24dp"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/divider_line_3" />

                <TextView
                    android:id="@+id/tv_my_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:text="my wallet"
                    android:textAllCaps="true"
                    android:textColor="#595c63"
                    android:textSize="12sp"
                    card_view:layout_constraintLeft_toRightOf="@+id/iv_my_wallet"
                    card_view:layout_constraintTop_toBottomOf="@+id/divider_line_3"
                    tools:text="my wallet" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/ll_oval_shape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/oval_green"
                    app:layout_constraintLeft_toRightOf="@+id/tv_my_wallet"
                    android:layout_marginLeft="50dp"
                    app:layout_constraintTop_toTopOf="@+id/tv_my_wallet"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_my_wallet"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    >

                    <ImageView
                        android:id="@+id/iv_currency_icon_white"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:paddingTop="1dp"
                        android:src="@drawable/india_currency_symbol_white"
                        app:layout_constraintTop_toTopOf="@+id/tv_wallet_money"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_wallet_money"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <TextView
                        android:id="@+id/tv_wallet_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@+id/iv_currency_icon_white"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.5"
                        tools:text="5"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                </android.support.constraint.ConstraintLayout>


                <View
                    android:id="@+id/divider_line_4"
                    android:layout_width="314dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="20dp"
                    android:background="#dadfe2"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/tv_my_wallet" />

                <ImageView
                    android:id="@+id/iv_coupons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_redeem_green_24dp"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/divider_line_4" />

                <TextView
                    android:id="@+id/tv_coupons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:text="coupons"
                    android:textAllCaps="true"
                    android:textColor="#595c63"
                    android:textSize="12sp"
                    card_view:layout_constraintLeft_toRightOf="@+id/iv_coupons"
                    card_view:layout_constraintTop_toBottomOf="@+id/divider_line_4"
                    tools:text="coupons" />

                <View
                    android:id="@+id/divider_line_5"
                    android:layout_width="314dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="20dp"
                    android:background="#dadfe2"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/tv_coupons" />

                <ImageView
                    android:id="@+id/iv_address_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_import_contacts_green_24dp"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/divider_line_5" />

                <TextView
                    android:id="@+id/tv_address_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:text="address book"
                    android:textAllCaps="true"
                    android:textColor="#595c63"
                    android:textSize="12sp"
                    card_view:layout_constraintLeft_toRightOf="@+id/iv_address_book"
                    card_view:layout_constraintTop_toBottomOf="@+id/divider_line_5"
                    tools:text="address book" />

                <View
                    android:id="@+id/divider_line_6"
                    android:layout_width="314dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="20dp"
                    android:background="#dadfe2"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/tv_address_book" />

                <ImageView
                    android:id="@+id/iv_rate_our_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_star_border_green_24dp"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/divider_line_6" />

                <TextView
                    android:id="@+id/tv_rate_our_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:text="rate our app"
                    android:textAllCaps="true"
                    android:textColor="#595c63"
                    android:textSize="12sp"
                    card_view:layout_constraintLeft_toRightOf="@+id/iv_rate_our_app"
                    card_view:layout_constraintTop_toBottomOf="@+id/divider_line_6"
                    tools:text="rate our app" />

                <View
                    android:id="@+id/divider_line_7"
                    android:layout_width="314dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="20dp"
                    android:background="#dadfe2"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/tv_rate_our_app" />

                <ImageView
                    android:id="@+id/iv_share_our_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_share_green_24dp"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/divider_line_7" />

                <TextView
                    android:id="@+id/tv_share_our_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:text="share our app"
                    android:textAllCaps="true"
                    android:textColor="#595c63"
                    android:textSize="12sp"
                    card_view:layout_constraintLeft_toRightOf="@+id/iv_share_our_app"
                    card_view:layout_constraintTop_toBottomOf="@+id/divider_line_7"
                    tools:text="share our app"
                    />

                <View
                    android:id="@+id/unused_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_share_our_app"
                    android:layout_marginTop="25dp"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/com_facebook_messenger_blue"
            android:text="logout"
            android:textAllCaps="true"
            tools:text="logout"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/card_view"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="155dp"/>

        <TextView
            android:id="@+id/tv_nikache_decor_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#818180"
            android:text="nikache"
            android:textStyle="bold"
            android:textAllCaps="true"
            tools:text="nikache"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_logout"
            android:layout_marginTop="11dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="145dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#818180"
            android:text="Ver: 1.0"
            android:textAllCaps="true"
            tools:text="Ver: 1.0"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_nikache_decor_shop"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="155dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"/>


    </android.support.constraint.ConstraintLayout>

</ScrollView>


    

    
    


    