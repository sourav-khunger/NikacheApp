<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"

    >

    <TextView
        android:id="@+id/lblListHeader"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:textAllCaps="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="10dp"
        />

    <ImageView
        android:id="@+id/iv_plus_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        />


    <ImageView
        android:id="@+id/iv_facebook"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/facebook_512_512"
        android:layout_marginLeft="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="12dp"
        android:backgroundTint="#d5d5d5"
        android:backgroundTintMode="multiply"
        />


    <ImageView
        android:id="@+id/iv_twitter"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/twitter_512_512"
        app:layout_constraintLeft_toRightOf="@+id/iv_facebook"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:padding="12dp"
        android:backgroundTint="#d5d5d5"
        android:backgroundTintMode="multiply"
        />
    <!--android:background="?android:attr/selectableItemBackground"-->

    <ImageView
        android:id="@+id/iv_youtube"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/youtube_512_512"
        app:layout_constraintLeft_toRightOf="@+id/iv_twitter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginLeft="30dp"
        android:padding="12dp"
        android:backgroundTint="#d5d5d5"
        android:backgroundTintMode="multiply"
        />

</android.support.constraint.ConstraintLayout>