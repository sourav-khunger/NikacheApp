<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_root_signup_page"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SignUpPage">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!--<TextView-->
        <!--android:id="@+id/tv_sign_up_with"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--tools:text="SIGN UP"-->
        <!--android:text="SIGN UP"-->
        <!--android:textSize="35dp"-->
        <!--app:layout_constraintTop_toTopOf="parent"-->
        <!--android:layout_marginTop="80dp"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--app:layout_constraintHorizontal_bias="0.5"-->
        <!--android:textColor="#808080"-->
        <!--/>-->

        <ImageView
            android:id="@+id/iv_nikache_logo_signup"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_login_232_50"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>

        <TextView
            android:id="@+id/tv_sign_up_with"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sign up with"
            android:text="Sign up with"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toBottomOf="@+id/iv_nikache_logo_signup"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:textColor="#808080"/>

    <Button
        android:id="@+id/ib_fb_button_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Facebook"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:background="#08579b"
        app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_with"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        />

    <TextView
        android:id="@+id/tv_or_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="or"
        android:text="or"
        android:textColor="#808080"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toBottomOf="@+id/ib_fb_button_sign_up"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
        android:id="@+id/tv_name_on_login_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name*"
        tools:text="Name*"
        app:layout_constraintTop_toBottomOf="@+id/tv_or_sign_up"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/et_name_on_sign_up_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_on_login_screen"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tv_email_on_sign_up_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email*"
        tools:text="Email*"
        app:layout_constraintTop_toBottomOf="@+id/et_name_on_sign_up_screen"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/et_email_on_sign_up_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email ID"
        app:layout_constraintTop_toBottomOf="@+id/tv_email_on_sign_up_screen"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tv_password_on_sign_up_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password*"
        tools:text="Password*"
        app:layout_constraintTop_toBottomOf="@+id/et_email_on_sign_up_screen"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/et_password_on_sign_up_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        app:layout_constraintTop_toBottomOf="@+id/tv_password_on_sign_up_screen"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tv_mobile_on_sign_up_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile*"
        tools:text="Mobile*"
        app:layout_constraintTop_toBottomOf="@+id/et_password_on_sign_up_screen"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/et_mobile_on_sign_up_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile"
        app:layout_constraintTop_toBottomOf="@+id/tv_mobile_on_sign_up_screen"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"/>

    <RadioGroup
        android:id="@+id/radio_group_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/et_mobile_on_sign_up_screen"
        android:layout_marginTop="30dp">

        <RadioButton
            android:id="@+id/male_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="male"
            android:text="male"
            android:textColor="#818180"
            android:textAllCaps="true"
            android:layout_marginLeft="25dp"/>

        <RadioButton
            android:id="@+id/female_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="female"
            android:text="female"
            android:textColor="#818180"
            android:textAllCaps="true"
            android:layout_marginLeft="25dp"/>

    </RadioGroup>

    <Button
        android:id="@+id/button_sign_up_signup_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/radio_group_sign_up"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginRight="30dp"
        />

    <View
        android:id="@+id/bottom_view_on_signup_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/button_sign_up_signup_screen"
        android:layout_marginTop="100dp"/>


</android.support.constraint.ConstraintLayout>
</ScrollView>