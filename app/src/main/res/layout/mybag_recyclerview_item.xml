<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">





        <android.support.v7.widget.CardView
            android:id="@+id/first_card_view_inmybag"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"

            >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                >

                <ImageView
                    android:id="@+id/iv_selected_product_image_in_mybag"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/satin_matt_textured"
                    />

                <TextView
                    android:id="@+id/tv_selected_product_name_in_mybag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Satin Matt Textured"
                    android:textColor="#595c63"
                    android:text="Satin Matt Textured"
                    app:layout_constraintLeft_toRightOf="@+id/iv_selected_product_image_in_mybag"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/tv_qty_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Qty:"
                    android:text="Qty:"
                    android:textColor="#595c63"
                    app:layout_constraintTop_toBottomOf="@+id/tv_selected_product_name_in_mybag"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toRightOf="@id/iv_selected_product_image_in_mybag"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/tv_qty_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@id/tv_selected_product_name_in_mybag"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toRightOf="@+id/tv_qty_label"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_product_price_mybag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Rs. 1699"
                    android:text="Rs. 1699"
                    android:textColor="#595c63"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/tv_qty_label"
                    android:layout_marginTop="30dp"
                    app:layout_constraintLeft_toRightOf="@id/iv_selected_product_image_in_mybag"
                    android:layout_marginLeft="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    />

                <View
                    android:id="@+id/v_first_card"
                    android:layout_width="1dp"
                    android:layout_height="130dp"
                    android:background="#dadfe2"
                    app:layout_constraintLeft_toRightOf="@id/tv_selected_product_name_in_mybag"
                    android:layout_marginLeft="70dp"    />

                <ImageView
                    android:id="@+id/iv_cancel"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_clear_grey_24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toRightOf="@+id/v_first_card"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"/>

                <ImageView
                    android:id="@+id/iv_wishlist_icon_inmybag"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_favorite_border_grey_24dp"
                    app:layout_constraintTop_toBottomOf="@+id/iv_cancel"
                    android:layout_marginTop="20dp"
                    app:layout_constraintLeft_toRightOf="@+id/v_first_card"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit_grey_mybag_24dp"
                    app:layout_constraintTop_toBottomOf="@+id/iv_wishlist_icon_inmybag"
                    android:layout_marginTop="20dp"
                    app:layout_constraintLeft_toRightOf="@+id/v_first_card"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>





</android.support.constraint.ConstraintLayout>