<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"

tools:context="com.doozycod.nikache.MyWallet">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:layout_constraintTop_toTopOf="parent"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

    <ImageView
        android:id="@+id/iv_rupees_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:src="@drawable/india_currency_symbol_green"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="5dp"
        />

    <EditText
        android:id="@+id/et_add_money_value"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_height="100dp"
        android:hint="Enter amount"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/iv_rupees_icon"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColorHint="#808080"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>

<Button
    android:id="@+id/b_add_money"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Add money"
    android:textStyle="bold"
    android:textColor="@color/white"
    android:background="@color/colorPrimary"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintVertical_bias="0.5"/>

</android.support.constraint.ConstraintLayout>
